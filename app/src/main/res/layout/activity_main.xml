<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinha"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ListView
        android:id="@+id/lvSong"
        android:layout_width="wrap_content"
        android:layout_height="568dp"/>


    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="0dp"
        android:background="@null"
        android:src="@drawable/batdau" />


    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="221dp"
        android:layout_marginBottom="0dp"
        android:background="@null"
        android:src="@drawable/player" />

    <SeekBar

        android:id="@+id/SeekBar"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="66dp" />

    <TextView
        android:id="@+id/tvTimeSong"
        android:textColor="#E6EBF3"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="91dp"
        android:text="00:00" />

    <TextView
        android:id="@+id/tvTotal"
        android:textColor="#E6EBF3"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="91dp"
        android:text="00:00" />

    <TextView
        android:id="@+id/tvPlaying"
        android:textColor="#E6EBF3"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:text="chưa chọn bài hát" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="2dp"
        android:background="@null"
        android:src="@drawable/ketthuc" />

    <ImageButton
        android:id="@+id/imgTron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:tint="#0CAAF1"
        android:src="@drawable/tronn" />
</RelativeLayout>